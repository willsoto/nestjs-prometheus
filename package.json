{
  "name": "@willsoto/nestjs-prometheus",
  "version": "4.6.0",
  "description": "NestJS module for Prometheus",
  "repository": "git://github.com/willsoto/nestjs-prometheus.git",
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "typings"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "prerelease": "npm run build",
    "release": "semantic-release",
    "test": "mocha",
    "test:coverage": "c8 mocha",
    "test:watch": "mocha --watch",
    "typecheck": "tsc --project tsconfig.lint.json --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "npm run lint",
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc -i",
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "file": "./ad-hocs/mocha/plugins.ts",
    "recursive": true,
    "require": [
      "ts-node/register",
      "./ad-hocs/mocha/hooks.ts"
    ],
    "sort": true,
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "c8": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "~17.0.0",
    "@commitlint/config-conventional": "~16.2.1",
    "@nestjs/cli": "~8.2.2",
    "@nestjs/common": "~8.4.0",
    "@nestjs/core": "~8.4.0",
    "@nestjs/platform-express": "~8.4.0",
    "@nestjs/platform-fastify": "~8.4.0",
    "@nestjs/schematics": "~8.0.8",
    "@nestjs/testing": "~8.4.0",
    "@semantic-release/changelog": "~6.0.1",
    "@semantic-release/git": "~10.0.1",
    "@types/chai": "~4.3.0",
    "@types/chai-as-promised": "~7.1.5",
    "@types/eslint": "~8.4.1",
    "@types/express": "~4.17.13",
    "@types/express-serve-static-core": "~4.17.28",
    "@types/mocha": "~9.1.0",
    "@types/node": "~17.0.21",
    "@types/prettier": "~2.6.0",
    "@types/rimraf": "~3.0.2",
    "@types/sinon": "~10.0.11",
    "@types/sinon-chai": "~3.2.8",
    "@types/supertest": "~2.0.11",
    "@typescript-eslint/eslint-plugin": "~5.23.0",
    "@typescript-eslint/parser": "~5.25.0",
    "c8": "~7.11.0",
    "chai": "~4.3.6",
    "chai-as-promised": "~7.1.1",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "~8.5.0",
    "husky": "~8.0.1",
    "lint-staged": "~12.4.0",
    "markdown-toc": "~1.2.0",
    "mocha": "~10.0.0",
    "prettier": "~2.6.0",
    "prettier-package-json": "~2.6.3",
    "prettier-plugin-organize-imports": "~2.3.4",
    "prettier-plugin-packagejson": "~2.2.15",
    "prom-client": "~14.0.1",
    "reflect-metadata": "~0.1.13",
    "rimraf": "~3.0.2",
    "rxjs": "~7.5.5",
    "semantic-release": "~19.0.2",
    "sinon": "~14.0.0",
    "sinon-chai": "~3.7.0",
    "standard-version": "~9.5.0",
    "supertest": "~6.2.2",
    "ts-node": "~10.7.0",
    "typescript": "~4.6.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0",
    "prom-client": "^13.0.0 || ^14.0.0"
  },
  "volta": {
    "node": "16.13.0",
    "npm": "8.1.2"
  }
}
